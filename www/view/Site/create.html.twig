{% extends 'base_login.html.twig' %}
{% block header %}
    {{ name }}
{% endblock %}
{% block data %}

    <div class="container">
        <h2>Для создания сайта введите email и пароль</h2>
        <form method="post" action="/">
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="new_email">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="new_password">
            </div>
            <input type="submit" class="btn btn-primary" name="submit" id="submit">
        </form>
        <br>
    </div>
{% endblock %}
{% block navigation %}

{% endblock %}
{% block footer %}
    Created by {{ creater }}
{% endblock %}